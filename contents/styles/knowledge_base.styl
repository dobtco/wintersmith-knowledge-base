.container
  border-top 1px solid #F3F6F8

// Navigation

.navbar
  padding 10px 50px
  line-height 75px

.navbar a
  color black

.navbar-left img
  height 75px

.navbar-left span
  padding-left 10px

.navbar-right
  text-align right

.navbar-form, .navbar-form input
  display inline
  width 200px

.navbar-form input
  margin-right 30px

// Home page

.main
  background #F3F6F8
  padding 20px 10px

.listings a hover
  text-decoration none

.listings a h3
  font-size 120%
  text-transform uppercase

.landing
  text-align center

.landing h1
  font-weight normal

// Search

.centersearch
  width 400px
  height 40px
  margin 0px auto

.search-results
  width 400px
  margin 0px auto
  margin-top 20px
  border 1px solid #ccc
  padding 10px

// TOC

.toc, .toc ul
  list-style-type none
  padding-left 20px

.toc li, .toc ul li
  margin-top 5px

.toggle_toc
  color black

.left_nav
  background #F3F6F8
  padding 2rem 2rem 2rem 4rem

  & p
    padding-bottom 15px
    word-wrap break-word

  & ul
    padding-left 5px

  & h4
    padding-top 10px
    font-weight normal
    text-transform uppercase
    font-size 100%

  & .current_article
    font-weight bold

  & .still_need_help
    text-indent 10px

// Article

.article
  background #fff

.breadcrumbs
  margin-top 10px
  margin-bottom 10px
