extends layout
block content
  .article-wrapper.cf
    .left_nav
      .container
        a.left_nav_toggle(data-toggle-class='open', data-target='.left_nav')
          i.fa.fa-reorder
          | Expand navigation

        .left_nav_inner
          p
            div.choose-app-text Choose an app:
            select#choose-app
              each dir in contents.articles._.directories
                option(value=dir.filename, selected=(cur_dir == dir.filename))= dir['index.md'].metadata.title || env.helpers.caps(dir.filename.split('/')[1])
          include partials/toc.jade
          +toc(_.filter(contents.articles._.directories, function(d) {if (cur_dir == d.filename) {return true}}), false)
          .still_need_help_container
            b Still need help?
            .still_need_help
              a.button.teal(href='mailto:support@dobt.co') Contact us
                i.fa.fa-envelope
    .article
      .breadcrumbs.capitalize
        - var rs = locals.page.filename.split('/').slice(1)
        each r, i in rs
          if i < (rs.length-1)
            if r != 'index.html'
              if _.isUndefined(contents.articles[r]) || _.isUndefined(contents.articles[r]['index.md'].metadata.title)
                = env.helpers.caps(env.helpers.format(r))
              else
                = (contents.articles[r]['index.md'].metadata.title)
              | &nbsp;&rarr;&nbsp;
        - var last = rs[rs.length-1]
      if page.metadata.title
        h1= page.metadata.title
      else
        h1= env.helpers.caps(env.helpers.format(rs[rs.length-2]))
      unless (route[route.length-1] == 'index.html') || !page.metadata.onThisPage
        .article_toc.grid
          .item.lap_six_columns
            h3 On This Page
            ol
              each h in page.metadata.onThisPage
                li: a(href!=h[1])= h[0]
          if page.metadata.FAQs.length > 0
            .item.lap_six_columns
              h3 FAQs
              ol
                each h in page.metadata.FAQs
                  li: a(href!=h[1])= h[0]
        hr
      .article_body
        != page.html
